# Terminal News Application - Environment Variables Template
# Copy this file to .env and fill in your values
# NOTE: No API key is required for basic RSS feed functionality!

# News API Configuration (OPTIONAL - only if you want NewsAPI sources)
# Uncomment and set if using newsapi.org
# NEWS_API_KEY=your_newsapi_key_here

# Application Configuration
DEBUG=false
CONFIG_PATH=./config/config.yaml

# Database Configuration
# (SQLite location is relative to ~/.newsapp/)
DATABASE_PATH=cache.db

# RSS and Scraping Configuration
RSS_ENABLED=true
SCRAPE_ENABLED=true
RSS_REQUEST_DELAY=1
SCRAPE_REQUEST_DELAY=2

# Cache Configuration
CACHE_TTL=3600
CACHE_ENABLED=true
SCRAPE_CACHE_TTL=1800

# UI Configuration
THEME=dark
AUTO_REFRESH_INTERVAL=300

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Feature Flags
EXPERIMENTAL_FEATURES=false
ENABLE_ANALYTICS=false

# Python Configuration
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
